rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if user has admin role
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // User profiles - users can read/write their own profile; admins can read any
    // Users cannot set/change their own role (only admins can)
    match /users/{userId} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId
        && !('role' in request.resource.data);
      allow update: if request.auth != null && request.auth.uid == userId
        && (!('role' in request.resource.data.diff(resource.data).affectedKeys())
            || isAdmin());
    }

    // Fuel prices - authenticated read/write with field validation
    match /fuel_prices/{airportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.data.keys().hasAll(['airport_id', 'price_100ll', 'updated_at', 'updated_by_uid'])
        && request.resource.data.updated_by_uid == request.auth.uid
        && request.resource.data.price_100ll is number
        && request.resource.data.price_100ll > 0
        && request.resource.data.price_100ll < 20;

      // Fuel price reports subcollection
      match /reports/{reportId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null
          && request.resource.data.reported_by_uid == request.auth.uid
          && request.resource.data.price_100ll is number
          && request.resource.data.price_100ll > 0
          && request.resource.data.price_100ll < 20;
        allow update: if request.auth != null
          && request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['upvotes', 'flags', 'verified_by_uids', 'flagged_by_uids']);
      }
    }

    // Daily metrics (e.g., daily_metrics/2026-02-18)
    match /daily_metrics/{dateId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Aggregate metrics (e.g., metrics/airports)
    match /metrics/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Dispatch packets - scoped to student and assigned instructor
    match /dispatches/{dispatchId} {
      allow read: if request.auth != null
        && (resource.data.studentUid == request.auth.uid
            || resource.data.instructorUid == request.auth.uid
            || isAdmin());
      allow create: if request.auth != null
        && request.resource.data.studentUid == request.auth.uid;
      allow update: if request.auth != null
        && (resource.data.studentUid == request.auth.uid
            || resource.data.instructorUid == request.auth.uid);
    }
  }
}
