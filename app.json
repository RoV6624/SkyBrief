{
  "expo": {
    "name": "SkyBrief",
    "slug": "sky-brief",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "skybrief",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#e8f4f8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.skybrief.app",
      "buildNumber": "15",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SkyBrief uses your location to find nearby weather stations.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "@react-native-firebase/app",
      "@react-native-google-signin/google-signin",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "SkyBrief uses your location to find nearby weather stations."
        }
      ],
      "./plugins/withFirebaseModularHeaders"
    ],
    "runtimeVersion": "1.0.0",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "484e3bf8-df53-451a-9c96-e0db112b43ce"
      },
      "router": {},
      "fuelApi": {
        "enabled": true,
        "baseUrl": "https://aviation-fuel-prices.com/api/v1",
        "timeout": 10000
      }
    },
    "owner": "rovel2004",
    "android": {
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.skybrief.app",
      "googleServicesFile": "./google-services.json"
    }
  }
}
